@model SignUpViewModel;

<section id="sign-up">
        <div class="container">
            <form class="sign-in-form" method="post" asp-controller="Account" asp-action="SignUp">
            <div class="headlines">
                <h1>Create Account</h1>
                <p>Already have an account?<a asp-controller="Account" asp-action="SignIn"> Sign in here.</a></p>
            </div>
                <div class="name-box">
                    <div id="form-firstname">
                        <label asp-for="Form.FirstName"><b>First name</b></label>
                        <div class="input-theme">
                        <span asp-validation-for="Form.FirstName"></span>
                        <input asp-for="Form.FirstName" placeholder="Enter your first name" /></div>
                    </div>
                    <div id="form-lastname">
                        <label asp-for="Form.LastName"><b>Last name</b></label>
                        <div class="input-theme">
                            <span asp-validation-for="Form.LastName"></span>
                        <input asp-for="Form.LastName" placeholder="Enter your last name" />
                        </div>
                    </div>
                </div>

                <div id="form-email">
                    <label asp-for="Form.Email"><b>Email</b></label>
                    <div class="input-theme">
                    <span asp-validation-for="Form.Email"></span>
                    <input asp-for="Form.Email" placeholder="Enter your email address" />
                    </div>
                </div>

                <div id="form-password">
                    <label asp-for="Form.Password"><b>Password</b></label>
                    <div class="input-theme">
                    <span asp-validation-for="Form.Password"></span>
                    <input asp-for="Form.Password" placeholder="********" />
                    </div>
                </div>
                <div id="form-comfirm">
                    <label asp-for="Form.ConfirmPassword"><b>Confirm password</b></label>
                    <div class="input-theme">
                    <span asp-validation-for="Form.ConfirmPassword"></span>
                    <input asp-for="Form.ConfirmPassword" placeholder="********" />
                    </div>
                </div>

                <div class="form-check" >
                    <input asp-for="Form.TermsAndConditions" class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
                    <label asp-for="Form.TermsAndConditions" class="form-check-label" for="flexCheckDefault">
                    I agree to the <a asp-controller="About" asp-action="Terms">Terms</a> & <a asp-controller="About" asp-action="Conditions">Conditions</a>
                    </label>
                    <span asp-validation-for="Form.TermsAndConditions"></span>
                </div>
                <button class="btn-theme-s" type="submit">Sign in</button>
            </form>
        </div>
    </section>
